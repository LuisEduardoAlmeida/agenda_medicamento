= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :provider
    = f.text_field :provider
  .field
    = f.label :sale_price
    = f.number_field :sale_price
  .field
    = f.label :purchase_price
    = f.number_field :purchase_price
  .field
    = f.label :stock
    = f.number_field :stock
  .field
    = f.label :minimum_stock
    = f.number_field :minimum_stock
  .field
    = f.label :exempt
    = f.text_field :exempt
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :discount
    = f.number_field :discount
  .actions
    = f.submit 'Save'
