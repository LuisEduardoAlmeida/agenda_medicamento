.row
  .col-lg-6.col-lg-offset-3
    .logo
      = image_tag 'pill.png', width: '350px'
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" }) do |f|      
      %legend Entrar
      = f.input :email, :required => false, :autofocus => true, placeholder:"Digite seu e-mail", label:"Login"
      = f.input :password, :required => false, placeholder:"Digite sua senha", label: 'Senha'
      = f.button :submit, "Logar", class:"btn btn-primary"
      %br/
      %br/
      - if devise_mapping.recoverable? && controller_name != 'passwords'
        = link_to "Esqueceu sua senha?", new_password_path(resource_name)
        %br/